<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alc.sevendayschallenge.journal">

    <application
        android:name=".Journal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".auth.CheckAuthActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.EntryActivity"
            android:label="@string/title_activity_new_entry"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".auth.LoginActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.BaseActivity" />

        <activity
            android:name=".auth.SignupActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".auth.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>