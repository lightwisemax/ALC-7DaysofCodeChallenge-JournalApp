<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/entry_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.EntryActivity"
    tools:showIn="@layout/activity_new_entry">

    <EditText
        android:id="@+id/entry_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/entry_margin"
        android:background="@android:color/transparent"
        android:hint="@string/entry_title"
        android:inputType="text"
        android:scrollHorizontally="false" />

    <EditText
        android:id="@+id/entry_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/entry_content"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="100"
        android:scrollHorizontally="false" />

</LinearLayout>